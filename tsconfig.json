{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react",
    "emitDeclarationOnly": false,
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "skipLibCheck": true,
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
}
